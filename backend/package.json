{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "start-win": "set NODE_ENV=production && node src/server.js",
    "start:docker": "node dist/index.cjs",
    "esbuild": "esbuild src/server.js --bundle --platform=node --target=node20 --format=cjs --outfile=dist/index.cjs",
    "build:reset": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "npm run build:reset && npm run esbuild",
    "docker-dev:up": "docker compose -f docker-compose-dev.yaml up",
    "docker-dev:down": "docker compose -f docker-compose-dev.yaml down --volumes",
    "docker-prod:up": "docker compose -f docker-compose-prod.yaml up --build -d",
    "docker-prod:down": "docker compose -f docker-compose-prod.yaml down"
  },
  "keywords": [],
  "author": "",
  "type": "module",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.2",
    "stream-chat": "^9.27.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "esbuild": "^0.27.2"
  }
}